  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\\\\\"libs/**/*.ts\\\\\\\" \\\\\\\"apps/**/*.ts\\\\\\\"",
    "start:gateway": "nest start gateway",
    "start:game": "nest start game",
    "start:indexer": "nest start indexer",
    "start:worker": "nest start worker",
    "start:dev:gateway": "nest start gateway --watch",
    "start:dev:game": "nest start game --watch",
    "start:dev:indexer": "nest start indexer --watch",
    "start:dev:worker": "nest start worker --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod:game": "node dist/apps/game/main",
    "start:prod:gateway": "node dist/apps/gateway/main",
    "start:prod:indexer": "node dist/apps/indexer/main",
    "start:prod:worker": "node dist/apps/worker/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "dev:check": "tsc --noEmit --project tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json"
  },
