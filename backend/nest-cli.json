{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "projects": {
    "gateway": {
      "type": "application",
      "root": "/apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "game": {
      "type": "application",
      "root": "/apps/game",
      "entryFile": "main",
      "sourceRoot": "apps/game/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "indexer": {
      "type": "application",
      "root": "/apps/indexer",
      "entryFile": "main",
      "sourceRoot": "apps/indexer/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "worker": {
      "type": "application",
      "root": "/apps/worker",
      "entryFile": "main",
      "sourceRoot": "apps/worker/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "@lib/modules": {
      "type": "library",
      "root": "/libs/shared-modules",
      "entryFile": "index",
      "sourceRoot": "/libs/shared-modules",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "@lib/utils": {
      "type": "library",
      "root": "/libs/shared-utils",
      "entryFile": "index",
      "sourceRoot": "/libs/shared-utils",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "@lib/config": {
      "type": "library",
      "root": "/libs/config",
      "entryFile": "index",
      "sourceRoot": "/libs/config",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "@lib/core": {
      "type": "library",
      "root": "/libs/core",
      "entryFile": "index",
      "sourceRoot": "/libs/core",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    }
  }
}
